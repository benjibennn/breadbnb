
        <%= form_for(listing) do |f| %>


          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>

          <div class="field">
            <%= f.label :place_type %>
            <%= f.text_field :place_type %>
          </div>

          <div class="field">
            <%= f.label :property_type %>
            <%= f.text_field :property_type %>
          </div>

          <div class="field">
            <%= f.label :room_number %>
            <%= f.number_field :room_number %>
          </div>

          <div class="field">
            <%= f.label :bed_number %>
            <%= f.number_field :bed_number %>
          </div>

          <div class="field">
            <%= f.label :guest_number %>
            <%= f.number_field :guest_number %>
          </div>

          <div class="field">
            <%= f.label :country %>
            <%= f.text_field :country %>
          </div>

          <div class="field">
            <%= f.label :state %>
            <%= f.text_field :state %>
          </div>

          <div class="field">
            <%= f.label :city %>
            <%= f.text_field :city %>
          </div>

          <div class="field">
            <%= f.label :zipcode %>
            <%= f.text_field :zipcode %>
          </div>

          <div class="field">
            <%= f.label :address %>
            <%= f.text_field :address %>
          </div>

          <div class="field">
            <%= f.label :price %>
            <%= f.number_field :price %>
          </div>

          <div class="field">
            <%= f.label :description %>
            <%= f.text_field :description %>
          </div>


          <div class="field">
            <%= f.file_field :images, multiple: true %>
          </div>


          <div class="actions">
            <%= f.submit %>
          </div>

        <% end %>
